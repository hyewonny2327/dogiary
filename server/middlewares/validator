
function validatorSignup (req, res, next) {

    const { userId, password } = req.body;

    if( !userId || !password ) {
        res.status(401).json({ message: "아이디, 비밀번호는 필수입니다." });
        return;
    }
    next();
}

function validatorSignin (req, res, next) {

    const { userId, password } = req.body;

    if( !userId || !password ) {
        res.status(401).json({ message: "아이디, 비밀번호는 필수입니다." });
        return;
    }
    next();
}


module.exports = { validatorSignup, validatorSignin };